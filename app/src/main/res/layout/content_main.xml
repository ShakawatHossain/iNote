<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gnt.com.inote.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello/World!"
        android:textSize="@dimen/t_size" />
    <TextView
        android:id="@+id/q_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello/World!"
        android:textSize="@dimen/t_size"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/p_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 %"
        android:textSize="@dimen/t_size"
        android:layout_below="@+id/q_work"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/work_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_work"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/p_work"
        android:textSize="@dimen/h1_size"/>
    <ListView
        android:id="@+id/list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/work_head"
        android:layout_above="@+id/goals"
        />
    <TextView
        android:id="@+id/goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/w_head"
        android:text="@string/goal"
        android:textSize="@dimen/h1_size"/>
    <TextView
        android:id="@+id/w_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/m_head"
        android:text="w_Goals"
        android:textSize="@dimen/t_size"/>
    <TextView
        android:id="@+id/w_golas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/m_golas"
        android:layout_alignParentRight="true"
        android:text="w_Goals"
        android:textSize="@dimen/t_size"
        />

    <TextView
        android:id="@+id/m_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="m_Goals"
        android:textSize="@dimen/t_size"/>
    <TextView
        android:id="@+id/m_golas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="m_Goals"
        android:textSize="@dimen/t_size"
        />
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0ffffff"
        android:visibility="gone"></FrameLayout>
</RelativeLayout>
